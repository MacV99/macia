  }
</style>

<script>
  // Detectar si es la primera carga directo a esta p치gina
  const isFirstVisit = !sessionStorage.getItem("visited-hero");

  if (isFirstVisit) {
    // Primera carga: a침adir clase para activar animaci칩n
    const section = document.querySelector("section.flex-c");
    if (section) {
      section.classList.add("animate");
    }
    // Marcar que ya visitamos en esta sesi칩n
    sessionStorage.setItem("visited-hero", "true");
  }
</script>
