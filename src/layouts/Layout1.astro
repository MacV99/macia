---
const { title, frase } = Astro.props;

import "../styles/global.css";
import Footer from "../components/Footer.astro";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon-white.jpg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <section id="hero" class="flex-c">
      <a href="/">
        <img src="/img/logo-positivo.png" alt="img-logo" />
      </a>
      <h1>{title}</h1>
      <p>ยก{frase}!</p>
    </section>

    <slot />

    <Footer />
  </body>
</html>

<style>
  @view-transition {
    navigation: auto; /* enabled! */
  }

  #hero {
    background-image: url("../img/hero-bg.jpg");
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center center;
    background-blend-mode: color;
    background-color: rgba(0, 0, 0, 0.9);
    background-size: cover;
    width: 100%;
    height: 250px;
    gap: 10px;
  }

  #hero p {
    color: var(--clr-white);
    text-align: center;
    font-style: oblique;
  }

  img {
    position: absolute;
    top: 20px;
    left: 20px;
    height: auto;
    max-width: 100px;
    margin-right: auto;
  }

  h1 {
    color: var(--clr-white);
    text-transform: uppercase;
    font-size: 24px;
    font-weight: 600;
    letter-spacing: 8px;
    padding-left: 8px;
    border-bottom: solid 1px var(--clr-white);
  }
</style>
