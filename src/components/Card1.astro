---
const { iconClass, title, description } = Astro.props;
---

<div class="flex-c">
  <i class={iconClass}></i>
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  div {
    gap: 5px;
    padding: 20px 10px;
    text-align: center;
    max-width: 350px;
  }

  i {
    font-size: 50px;
    margin-bottom: 20px;
  }

  h3 {
    text-transform: uppercase;
  }
</style>
